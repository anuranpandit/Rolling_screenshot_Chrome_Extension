{
  "manifest_version": 3,
  "name": "Rolling Screenshot Extension (v3)",
  "version": "2.2",
  "description": "Take full-page screenshots while excluding sticky headers/footers and stitching seamlessly",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}